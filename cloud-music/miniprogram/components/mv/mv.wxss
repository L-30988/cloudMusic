/* pages/a/a.wxss */

.all{
  display: flex;
  justify-content: center;

  
  
    
  }
  .mvcenter{
    display: flex;
    flex-wrap: wrap;
    justify-content: left;
    margin-top: 10rpx;
    width: 98%;
    
  }
  .mvitem{
    width: 330rpx;
    height: 500rpx;
    margin-left: 25rpx;
    background-color: #fff;
    margin-bottom: 50rpx;
    border-radius: 17rpx;
  }
  .mv {
  
    width: 100%;
    height: 70%;
    position: relative;
   
  }
  .bgurl{
    
  position: absolute;
  width: 100%;
  height: 100%;
  filter: blur(15rpx);
  opacity: 0.9;
  z-index: 1;
  
  }
  .mask{
    border-top-left-radius: 17rpx;
    border-top-right-radius: 17rpx;
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgb(54, 54, 54);
  }
  .bg{
   
    z-index: 2;
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    
  }
  
  .mvimg {
    margin: 0 auto;
    width: 60rpx;
    height: 45rpx;
    background-color: rgb(223, 220, 220, 0.5);
    margin-top: 30rpx;
    border-radius: 30%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .textmv {
    z-index: 1;
    color: black;
    font-size: 30rpx;
    opacity: 0.4;
  }
  .main {
    position: relative;
    margin: 0 auto;
    margin-top: 35rpx;
    width: 90%;
  
  }
  .img {
    width: 100%;
    height: 145rpx;
    border-radius: 9rpx;
  }
  .image-border {
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    border-radius: 4rpx;
  }
  
  .image-border1 {
    top: 0;
    left: 0;
    border-left: 3rpx solid rgb(243, 243, 243);
    border-top: 3rpx solid rgb(243, 243, 243);
  }
  
  .image-border2 {
    top: 0;
    right: 0;
    border-right: 3rpx solid rgb(243, 243, 243);
    border-top: 3rpx solid rgb(243, 243, 243);
  }
  
  .image-border3 {
    bottom: 0;
    left: 0;
    border-bottom: 3rpx solid rgb(243, 243, 243);
    border-left: 3rpx solid rgb(243, 243, 243);
  }
  
  .image-border4 {
    bottom: 0;
    right: -1rpx;
    border-right: 3rpx solid rgb(243, 243, 243);
    border-bottom: 3rpx solid rgb(243, 243, 243);
  }
  .duration {
    margin-top: 45rpx;
    margin-left: 70%;
   font-size: 25rpx;
    color: rgb(223, 220, 220);

  
  }
  .text {
    font-size: 30rpx;
    margin-top: 20rpx;
    margin-left: 10rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    color: rgb(10, 10, 10);
  }
  .playCount {
  margin-left: 5rpx;
    margin-top: 10rpx;
    font-size: 20rpx;
    color: rgb(105, 104, 104);
    padding-left: 26rpx;
  background: url(data:image/png;base64,) no-repeat 0 8rpx/22rpx 20rpx;
  }