/* components/playlist/playlist.wxss */
.playlist-container{
  width: 220rpx;
  position: relative;
  padding-bottom: 20rpx;
}
.playlist-img{
  width: 100%;
  height: 200rpx;
  border-radius: 6rpx;
}
.playlist-playcount{
  color: #fff;
  font-size: 24rpx;
  text-shadow: 1px 0 0 rgb(0, 0, 0);
  position: absolute;
  right: 10rpx;
  top: 4rpx;
  padding-left: 26rpx;
  background: url(data:image/png;base64,) no-repeat 0 8rpx/22rpx 20rpx;
}
.playlist-name{

  font-size: 26rpx;
  line-height: 1.2;
  padding: 2px 0 0 6px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow: ellipsis;
}