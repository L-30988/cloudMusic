  color: rgb(104, 104, 104);
}
/*隐藏scroll-view滚动条*/
::-webkit-scrollbar{
  display: none;
  }

  .model{
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 99;
    background: rgba(48, 47, 47, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .removeText{
    background-color: #fff;
