.container{

  width: 85%;
  height: 70rpx;
  border-radius: 15rpx;
  border: 1rpx solid black;
  margin: 25rpx auto;
  display: flex;
  align-items: center;
  
}

.input{
  margin-left: 15rpx;
  font-size: 30rpx;
  width: 90%;
  height: 68rpx;
}
.placeholderColor{
  color: rgb(163, 163, 163);
  font-size: 25rpx;
}
.icon-shanchu{
  font-size: 45rpx;
}
.search{
position: fixed;
width: 85%;
left: 50%;
transform: translate(-50%);
z-index: 88;
background-color: #fff;
box-shadow: 5rpx 5rpx 35rpx -19rpx rgb(0, 0, 0) 
}
.top{
  font-size: 30rpx;
  margin-left: 22rpx;
  color: rgb(38, 38, 247);
}
.tip{
  margin-left: 10rpx;
  font-size: 31rpx;
  color: rgb(104, 104, 104);
  padding: 20rpx;
  border-bottom:0.5rpx solid rgb(238, 238, 238);
}
.music{
 display: flex;
 justify-content: center;
  font-size: 95rpx;
  font-weight: 800;

}
.blue{
color:#5D85F9;
transform: rotate(-10deg);

}
.red{
  color:#E12E56 ;

}
.yellow{
  color:#F7C709 ;

}
.green{
  color:#21CB67 ;
  transform: rotate(-10deg);
}
.history{
  height: 100rpx;
  display: flex;
  align-items: center;

}
.sameStyle{
  width: 80rpx;
  font-size: 30rpx;
  font-weight: 800;
  margin-left: 25rpx;
}
.historybg{
  padding:10rpx;
  background-color: rgba(143, 141, 141, 0.1); 

  margin-left: 20rpx;
  border-radius: 27rpx;
  display:inline-block;
}
.scroll-view_H {

  width: 550rpx;
  font-size: 32rpx;
  white-space: nowrap;
}
.remove{
  font-size: 35rpx;
  margin-left: 35rpx;
  color: rgb(104, 104, 104);
}
.hotlist{
  margin-top: 25rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
.hotlistitem{
  width: 50%;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.index{
  padding: 15rpx;
